doctype html
html
    include ./include/head.jade
    body
        main 
            div(class='userbox')                
                div(class='section-1')
                    div(class='section1-holder')
                        img(src='../img/photoimg.png')                    
                div(class='section-2')
                    form(class='form' id='form1')
                        ul(class='unorderlist')
                            li
                                p(id='emailParagraph') EMAIL ADDRESS
                            li                                
                                input(type='text' placeholder='Enter your email adress' id='emailbox' class='inputbox')                        
                                label
                                    span(class='popup-email' id='foremail') 
                                        p(class='popupbox' id='required-email') required
                                        div(class='starid')
                                            p *   
                                div(id='email_error')
                                    p Invalid email adress
                            li
                                p PASSWORD
                            li
                                input(type='password' placeholder='Enter your password' id='passwordbox' class='inputbox')
                                label
                                    span(class='popup-password' id='forpassword') 
                                        p(class='popupbox' id='required-password') required
                                        div(class='starid')
                                            p *                                     

                        ul(id='checkboxul' )
                             li(class='myCheckBox')
                                input(type='checkbox' id="c1")
                                label(for='c1')                        
                                    span 
                             li
                                p(id='test123') REMEMBER ME

                             //li
                                p(id='remp') REMEMBER ME
                div(class='section-3')
                    div(class='section3-holder')                        
                        a(href='./resetpassword.html') Forgotten password?
                        a(class='buttontype' id='loginbutton' form='form1') LOGIN
    include ./include/footer.jade