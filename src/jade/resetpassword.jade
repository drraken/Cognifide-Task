doctype html
html
    include ./include/head.jade
    body
        main
            div(class='userbox' id='smalleruserbox')
                div(class='section-1')
                    img(src='../img/photoimg.png')
                    p RESET PASSWORD
                div(class='section-2')
                    ul(class='unorderlist' id='resetpasswordul')
                        li
                            p(id='first-p') Hey, it happens to everyone.
                            p Just let us know what email address you use to login
                            p and we'll send you an email with instructions.
                        li
                            p(id='email-p') EMAIL ADDRESS
                        li
                            input(type='text' placeholder='' id='resetbox' class='inputbox')
                            label
                                span(class='popup-reset' id='forReset') 
                                    p(class='popupbox' id='required-reset') required
                                    div(class='starid')
                                        p *   
                div(class='section-3')
                     ul(id='resetsectionul')
                        li 
                            a(href='../index.html' id='Cancelbutton') CANCEL
                        li
                            input(class='buttontype' type='submit' value='RESET PASSWORD' id='resetbutton')                        
    include ./include/footer.jade